@model IEnumerable<Jobs.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@foreach (var item in Model)
{
    <div class="panel panel-default">
        <h1 class="panel-heading">Search Results</h1>

        <div class="row">

            @foreach (var subItem in Model)
            {


                <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:20px; height:450px">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h3>@Html.DisplayFor(modelItem => subItem.JobContent)</h3>
                    @Html.ActionLink("Details", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })
                </div>

            }
        </div>
    </div>

}